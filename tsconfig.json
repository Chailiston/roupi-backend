{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",

    /* Modules */
    "module": "commonjs",

    /* Emit */
    "rootDir": "src",
    "outDir": "dist",

    /* Strictness */
    "strict": true,

    /* Interop */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
